// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  user        String       @unique
  password    String
  createdAt   DateTime     @default(now())
  credentials Credential[]
  notes       Note[]

  @@map("users")
}

model Credential {
  id       Int    @id @default(autoincrement())
  username String
  password String
  url      String
  title    String
  name     String
  userId   Int
  userRef  User   @relation(fields: [userId], references: [id])

  @@unique([userId, title])
  @@map("credentials")
}

model Note {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  userId    Int
  userRef   User     @relation(fields: [userId], references: [id])

  @@unique([userId, title])
  @@map("notes")
}
